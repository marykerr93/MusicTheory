<%- include("partials/header") %>
<section class="container">
  <div class="box my-6">
    <h1 class="title">Contact Form</h1>

    <form action="/contact" id="contact-form" method="post" role="form">
      <fieldset>
        <div class="field">
          <label for="name">Name</label>
          <div class="control">
            <input class="input is-primary" id="name" name="name" type="text" placeholder="Your name" required>  
          </div>
        </div>
        <div class="field">
          <label for="email">Email</label>
          <div class="control">
            <input class="input is-primary" id="email" name="email" type="email" placeholder="Your email" required>
          </div>
        </div>
        <div class="field">
          <label for="message">Message</label>
          <div class="control">
            <textarea class="textarea is-primary" id="message" name="message" placeholder="Enter your message here" required rows="3"></textarea>
          </div>
        </div>
        <div class="field website">
          <label for="website">Website</label>
          <div class="website">
            <input class="input is-primary" id="website" name="website"></input>
          </div>
        </div>
        <div class="control">
          <button class="button is-link is-pulled-right" type="submit">Submit</button>
        </div>
      </fieldset>
    </form>
  </div>
</section>
<!-- footer -->
<footer class="footer sticky">
  <div class="content has-text-centered">
    <p>
      Music Theory Website by Mary. Sources can be found on our <a href="/Sources">sources page</a>.
    </p>
  </div>
</footer>
</body>
</html>